<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<GridPane alignment="CENTER" vgap="10.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.bookstore.HelloController">

  <padding>
    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
  </padding>

  <Label maxWidth="1.7976931348623157E308" text="Sacred Space Bookstore" textFill="#2505c3" GridPane.columnIndex="1" GridPane.columnSpan="2147483647" GridPane.rowIndex="1">
    <font> <Font name="System Bold" size="24.0" /> </font>
  </Label>

    <Label text="Book Title : " GridPane.columnIndex="1" GridPane.rowIndex="2">
      <font>
         <Font size="18.0" />
      </font>
   </Label>

    <TextField fx:id="tfBookTitle" promptText="Enter book title" GridPane.columnIndex="2" GridPane.rowIndex="2">
        <font>
            <Font size="18.0" />
        </font>
    </TextField>

   <Label text="Author" GridPane.columnIndex="1" GridPane.rowIndex="3">
      <font>
         <Font size="18.0" />
      </font>
   </Label>
   <TextField fx:id="tfAuthor" promptText="Enter Author name" GridPane.columnIndex="2" GridPane.rowIndex="3">
      <font>
         <Font size="18.0" />
      </font>
   </TextField>

    <Label text="Category" GridPane.columnIndex="1" GridPane.rowIndex="4">
        <font>
            <Font size="18.0" />
        </font>
    </Label>

    <RadioButton fx:id="rdbFiction" selected="true" text="Fiction" GridPane.columnIndex="2" GridPane.rowIndex="4">
        <font>
            <Font size="18.0" />
        </font>
    </RadioButton>

    <RadioButton fx:id="rdbNonFiction" selected="false" text="Non-Fiction" GridPane.columnIndex="2" GridPane.rowIndex="5">
        <font>
            <Font size="18.0" />
        </font>
    </RadioButton>

    <RadioButton fx:id="rdbBiography" selected="false" text="Biography" GridPane.columnIndex="2" GridPane.rowIndex="6">
        <font>
            <Font size="18.0" />
        </font>
    </RadioButton>

    <Label text="Cover Type" GridPane.columnIndex="1" GridPane.rowIndex="7">
        <font>
            <Font size="18.0" />
        </font>
    </Label>

    <ComboBox fx:id="cmbCoverType" GridPane.columnIndex="2" GridPane.rowIndex="7" />

    <Label text="Quantity" GridPane.columnIndex="1" GridPane.rowIndex="8">
        <font>
            <Font size="24.0" />
        </font>
    </Label>
    <TextField fx:id="tfQuantity" promptText="Enter quantity" GridPane.columnIndex="2" GridPane.rowIndex="8">
        <font>
            <Font size="24.0" />
        </font>
    </TextField>

    <Button maxWidth="1.7976931348623157E308" onAction="#onSaveButtonClick" text="Save book info" GridPane.columnIndex="1" GridPane.columnSpan="2147483647" GridPane.rowIndex="10">
        <font>
            <Font size="24.0" />
        </font>
    </Button>

    <Label fx:id="lblOutput" maxWidth="1.7976931348623157E308" prefHeight="203.0" prefWidth="317.0" text="output" textFill="blueviolet" GridPane.columnIndex="1" GridPane.columnSpan="2147483647" GridPane.rowIndex="11">
        <font>
            <Font size="24.0" />
        </font>
    </Label>

    <TableView fx:id="bookTableView" prefHeight="200.0" prefWidth="792.0" GridPane.columnIndex="1" GridPane.columnSpan="2147483647" GridPane.rowIndex="12">
      <columns>
         <TableColumn fx:id="colTitle" prefWidth="75.0" text="Title" />
          <TableColumn fx:id="colAuthor" prefWidth="75.0" text="Author" />
          <TableColumn fx:id="colCategory" prefWidth="75.0" text="Category" />
          <TableColumn fx:id="colCoverType" prefWidth="75.0" text="Cover Type" />
          <TableColumn fx:id="colQuantity" prefWidth="75.0" text="Quantity" />
          <TableColumn fx:id="colPrice" prefWidth="75.0" text="Price" />
          <TableColumn fx:id="colTotal" prefWidth="75.0" text="Total" />
      </columns>
    </TableView>

    <Button maxWidth="1.7976931348623157E308" onAction="#onQuitClick" text="Close Book Store" GridPane.columnIndex="1" GridPane.columnSpan="2147483647" GridPane.rowIndex="13">
        <font>
            <Font size="24.0" />
        </font>
    </Button>

   <columnConstraints>
      <ColumnConstraints />
      <ColumnConstraints />
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
   </rowConstraints>



</GridPane>
